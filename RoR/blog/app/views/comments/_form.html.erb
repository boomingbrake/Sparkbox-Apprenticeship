<%= form_for([@post, @post.comments.build]) do |f| %>
<section class="section__container">

<h2 class="section__head"></h2>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
</section>
<% end %>
